{
	"name": "super-macro",
	"displayName": "Super Macro",
	"description": "Define vscode command combos with repeats and delays.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.macro"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
            "type": "object",
            "title": "Super macros",
            "properties":{
                "macro":{
					"demo": [
						"cursorEnd",
						{"command": "type", "args": {"text": "\n"}, "repeat": 3, "intervalAfter": 100},
						{"command": "cursorUp", "repeat": 3},
						{"command": "cursorHome", "intervalBefore": 100}
					]
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
